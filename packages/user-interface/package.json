{
  "name": "@nl-portal/user-interface",
  "version": "0.1.0",
  "description": "Made with create-react-library",
  "author": "Municipality of The Hague",
  "license": "EUPL-1.2",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --no-sourcemap --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.12.38",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "sass": "^1.38.2",
    "typescript": "^4.1.2"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@gemeente-denhaag/denhaag-component-library": "0.2.3-alpha.21",
    "@gemeente-denhaag/icons": "^0.2.3-alpha.16",
    "@nl-portal/localization": "0.1.0",
    "@react-keycloak/web": "^3.4.0",
    "@types/lodash": "^4.14.172",
    "@types/react-router-dom": "^5.1.8",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "react-intl": "^5.20.10",
    "react-router-dom": "^5.2.1"
  }
}
